- var imports = require('../../../../imports');

doctype html
html
  head
    meta(charset='utf-8')
    meta(name='renderer' content='webkit')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    if htmlWebpackPlugin.options.mode !== 'development'
      include ../../../../components/Theme/stylesheet.pug

  body
    div.app#app
      include ../../../../components/loading/loading.pug

    include ../../../../components/initialState/initialState.pug
    include ../../../../components/Theme/themeInit.pug

    if htmlWebpackPlugin.options.mode === 'development'
      script(src=imports.dll)