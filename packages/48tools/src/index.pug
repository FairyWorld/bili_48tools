- var imports = require('./imports');
- var packageJson = require('../package.json');

doctype html
html
  head
    meta(charset='utf-8')
    meta(name='renderer' content='webkit')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title= `48tools - ${ packageJson.version }`

  body.theme
    include ./components/Theme/stylesheet.pug
    div.app#app
      include ./components/loading/loading.pug

    include ./components/initialState/initialState.pug
    script(src=require('./pages/Toutiao/toutiaosdk-acrawler'))
    script(src=require('./pages/Toutiao/toutiaosdk-captcha'))
    if htmlWebpackPlugin.options.mode === 'development'
      script(src=imports.dll)